<config>
    <sections>
        <shipping translate="label" module="shippingcore">
            <groups>
                <dwa translate="label">
                    <label>Dimensional Weight Attributes</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>4</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <length translate="label">
                            <label>Length</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shippingcore/system_config_source_length</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </length>
                        <width translate="label">
                            <label>Width</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shippingcore/system_config_source_width</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </width>
                        <height translate="label">
                            <label>Height</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shippingcore/system_config_source_height</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </height>
                        <separator translate="label">
                            <frontend_type>hidden</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </separator>
                        <attribute_set translate="label">
                            <label>Attribute Set</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shippingcore/system_config_source_attributeset</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </attribute_set>
                        <attribute_set_group translate="label">
                            <label>Attribute Set Group</label>
                            <frontend_type>select</frontend_type>
                            <comment><![CDATA[
                                <strong style="color:#3D5B9C">Note:&nbsp;</strong>Attribute set and attrbute set group are optional and only used to set dimensional weight attributes.
                            ]]></comment>
                            <source_model>shippingcore/system_config_source_attributesetgroup</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </attribute_set_group>
                        <set_attributes translate="label">
                            <frontend_type>button</frontend_type>
                            <frontend_model>shippingcore/adminhtml_system_config_form_dwaButton</frontend_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </set_attributes>
                    </fields>
                </dwa>
                <cod_method>
                    <label>Cash on Delivery Methods</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <list translate="label">
                            <label>Cash on Delivery Methods</label>
                            <comment><![CDATA[
                                Select Cash on Delivery methods from the above payment methods list.<br/>
                                <strong style="color:#3D5B9C">Note:&nbsp;</strong>Make sure that the COD payment methods that you want to select are enabled in (System > Configuration > Payment Methods page).
                            ]]></comment>
                            <frontend_type>multiselect</frontend_type>
                            <sort_order>10</sort_order>
                            <source_model>shippingcore/system_config_source_activepaymentmethod</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </list>
                    </fields>
                </cod_method>
            </groups>
        </shipping>
    </sections>
</config>
