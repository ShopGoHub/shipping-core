<config>
    <modules>
        <Shopgo_ShippingCore>
            <version>1.0.2</version>
        </Shopgo_ShippingCore>
    </modules>
    <global>
        <helpers>
            <shippingcore>
                <class>Shopgo_ShippingCore_Helper</class>
            </shippingcore>
        </helpers>
        <models>
            <shippingcore>
                <class>Shopgo_ShippingCore_Model</class>
            </shippingcore>
            <shipping>
                <rewrite>
                    <info>Shopgo_ShippingCore_Model_Magento_Shipping_Info</info>
                </rewrite>
            </shipping>
        </models>
        <events>
            <adv_ifconfig_custom_rules>
                <observers>
                    <set_admin_sales_order_shipment_new_css_js_files>
                        <type>singleton</type>
                        <class>shippingcore/observer</class>
                        <method>setAdminSalesOrderShipmentNewCssJsFiles</method>
                    </set_admin_sales_order_shipment_new_css_js_files>
                </observers>
            </adv_ifconfig_custom_rules>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <shippingcore>
                    <file>shopgo/shipping_core.xml</file>
                </shippingcore>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <shippingcore before="Mage_Adminhtml">Shopgo_ShippingCore_Adminhtml</shippingcore>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <shippingcore>
                    <file>shopgo/shipping_core.xml</file>
                </shippingcore>
            </updates>
        </layout>
    </adminhtml>
</config>
